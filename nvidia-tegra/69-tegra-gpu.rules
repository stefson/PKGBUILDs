# Do not edit this file, it will be overwritten on update
#
# Set the right permissions to the devices provided by the
# tegra driver
ENV{ACL_MANAGE}=="0", GOTO="tegra_gpu_end"
ACTION!="add|change", GOTO="tegra_gpu_end"

# root only devices
KERNEL=="knvrm" OWNER="root" GROUP="root" MODE="0660"
KERNEL=="knvmap" OWNER="root" GROUP="root" MODE="0660"

# graphics devices
ACTION=="add|change", KERNEL=="nvhost*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="nvmap*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="tegra*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="nvram", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="nvhdcp*", TAG+="udev-acl"

# multimedia devices
ACTION=="add|change", KERNEL=="fb[0-9]", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="torch", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="ov*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="focuser*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="sh5*", TAG+="udev-acl"
ACTION=="add|change", KERNEL=="tp5*", TAG+="udev-acl"

LABEL="tegra_gpu_end"
